<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Reports::report">
                    <resource id="Magento_Reports::customers">
                        <resource id="CreenSight_LoginAsCustomer::logs" title="Login as Customer Logs" translate="title" sortOrder="100"/>
                    </resource>
                </resource>
                <resource id="Magento_Customer::customer">
                    <resource id="CreenSight_LoginAsCustomer::allow" title="Allow Login as Customer" translate="title" sortOrder="100"/>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="CreenSight_LoginAsCustomer::configuration" title="CreenSight Login as Customer" translate="title" sortOrder="40"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
